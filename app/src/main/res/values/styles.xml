<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="LoadingTheme" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
    </style>

    <style name="SetupTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="BtnTheme" parent="ThemeOverlay.AppCompat.Dark">
        <item name="colorButtonNormal">@android:color/darker_gray</item>    <!-- Disable Color -->
        <item name="android:colorAccent">@color/colorPhysis</item>         <!-- Enable  Color -->
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="ToolBarTitle"  parent="@android:style/Widget.TextView">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/bg_intro</item>
    </style>

    <style name="TurnOnTheme" parent="ThemeOverlay.AppCompat.Dark">
        <item name="colorButtonNormal">@android:color/darker_gray</item>    <!-- Disable Color -->
        <item name="android:colorAccent">#ffe35a</item>         <!-- Enable  Color -->
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="TurnOffTheme" parent="ThemeOverlay.AppCompat.Dark">
        <item name="colorButtonNormal">@android:color/darker_gray</item>    <!-- Disable Color -->
        <item name="android:colorAccent">#cfcfcf</item>         <!-- Enable  Color -->
        <item name="android:textColor">@android:color/black</item>
    </style>

</resources>
